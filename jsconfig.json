{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}